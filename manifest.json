{
  "manifest_version": 2,
  "name": "SourceKit",
  "version": "0.8.3",
  "incognito": "split",
  "icons": { 
    "128": "icons/icon_128.png",
    "16": "icons/icon_16.png"
  },
  "background":{
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon_16.png"
  },
  "web_accessible_resources": [
    "resources/*",
    "src/*",
    "icons/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "activeTab",
	"tabs",
    "notifications",
    "http://*.dropbox.com/",
    "https://*.dropbox.com/"
  ]
}
